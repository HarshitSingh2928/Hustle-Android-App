<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <ImageView
        android:id="@+id/register_img"
        android:layout_width="247dp"
        android:layout_height="235dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"

        android:layout_alignParentTop="true"

        android:background="#00000000"
        android:src="@drawable/hustle_design1"></ImageView>

    <TextView
        android:textSize="19sp"
        android:id="@+id/welconeoncb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/register_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:fontFamily="@font/poppins"
        android:text="@string/welcome_onb"
        android:textAppearance="@style/welcome_onb"
        app:lineHeight="27px"></TextView>

    <TextView
        android:textSize="18sp"
        android:id="@+id/we_help_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welconeoncb"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-24dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|top"
        android:text="@string/we_help_you"
        android:textAppearance="@style/we_help_you" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/we_help_you"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-66dp"
        android:background="@drawable/shapess"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:hint="Enter your full name"
        android:paddingStart="40dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/input_name"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-65dp"
        android:background="@drawable/shapess"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingStart="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/input_email"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-68dp"
        android:background="@drawable/shapess"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingStart="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/input_confirm"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/input_password"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:layout_marginBottom="-64dp"
        android:background="@drawable/shapess"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="40dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="309dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/input_confirm"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-76dp"
        android:background="@drawable/shape_button"
        android:elevation="4dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#FFD615" />

    <TextView
        android:id="@+id/already_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_button"


        android:layout_centerInParent="true"
        android:layout_marginBottom="-41dp"
        android:fontFamily="@font/poppins"
        android:text="Already have an account?"
        android:textColor="@color/black"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/already_have"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-21dp"
        android:fontFamily="@font/poppins"
        android:onClick="SignIn"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Sign in"
        android:textColor="#FFD615"
        android:textSize="18sp"></TextView>


</RelativeLayout>